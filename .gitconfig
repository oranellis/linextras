[core]
	editor = nvim
[init]
	defaultBranch = main
[pull]
	rebase = false
	ff = true
[http]
	sslVerify = true
[diff]
    tool = nvimdiff
    guitool = nvimdiff
[difftool]
    prompt = true
[merge]
    tool = nvimdiff
	conflictstyle = diff3
	ff = false
[mergetool]
    keepBackup = false
    trustExitCode = false
    prompt = true
[mergetool "nvimdiff"]
	layout = LOCAL,MERGED,REMOTE
[gpg]
	format = ssh
[commit]
	gpgsign = true
[alias]
	graph = log --oneline --graph --decorate --branches
	update = !sh -c 'git add -A && git commit -m \"Update $(date \"+%y%m%d %H%M\")\"' && git push
